/**index.wxss**/
.container{
  margin-top: 20px;
}
.post-card, .post-feed {
    display: -ms-flexbox;
    display: flex;
}
.post-card {
    -ms-flex: 1 1 300px;
    /* flex: 1 1 300px; */
    -ms-flex-direction: column;
    flex-direction: column;
    overflow: hidden;
    margin: 0 20px 20px;
    min-height: 300px;
    background: #fff 50%;
    background-size: cover;
    border-radius: 5px;
    box-shadow: 8px 14px 38px rgba(39, 44, 49, 0.06), 1px 3px 8px rgba(39, 44, 49, 0.03);
    transition: all 0.5s ease;
    width: 90%;

}
.post-card-image-link {
    /* position: relative; */
    display: block;
    overflow: hidden;
    border-radius: 5px 5px 0 0;
}
.img{
  width: 100%;
}

.post-card-content {
    -ms-flex-positive: 1;
    flex-grow: 1;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: justify;
    justify-content: space-between;
    width: 95%;
    height: 100%;
    /* border: 1px solid red; */
    margin: 5px auto;
}

.title {
    font-family: 微软雅黑;
    line-height: 1.15;
    font-weight: 700;
    text-rendering: optimizeLegibility;
    margin: 8px;
}

.summary {
    height: 100%;
    font-size: 13px;
    line-height: 1.5;
    font-family: 微软雅黑;
    margin: 0px 8px 8px 8px;
}

.footer {
    display:flex;
}

.postDate {
    margin-left:5px;
}
.author{
  line-height:30px;
  font-size:10px;
  color:#738a94;
  font-family:微软雅黑;
  margin-left: 2px;
}
