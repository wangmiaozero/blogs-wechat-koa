/* pages/collect/index.wxss */
.scorll-margin {
  margin-bottom: 35px;
}

.zan-panel {
  position: relative;
  background: #fff;
  margin-top: 10px;
  overflow: hidden;
  border-bottom:1px solid #e1e1e1;
}

.zan-card {
  margin-left: 0;
  width: auto;
  padding: 0px 15px;
  overflow: hidden;
  position: relative;
  font-size: 14px;
}
.zan-card1{
  margin-left: 0;
  width: auto;
  padding: 0px 8px;
  overflow: hidden;
  position: relative;
  font-size: 14px;
}
.zan-card__thumb {
  width: 90px;
  height: 90px;
  float: left;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  background-size: cover;
}
.zan-card__img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
}
.zan-card__detail {
    margin-left: 100px;
    width: auto;
    position: relative;
}
.zan-card__detail-row {
    overflow: hidden;
    line-height: 20px;
    min-height: 20px;
    margin-bottom: 3px;
}
.zan-ellipsis--l2 {
    max-height: 38px;
    line-height: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.zan-margin {
    margin-right: 10rpx;
    color: gray；;
}
.zan-font-12 {
    font-size: 12px;
}
.zan-pull-left {
    float: left;
}
.zan-margin-tag {
    margin-right: 20rpx;
    color: #738a94;
}
.postDate {
    margin-left:5px;
}
.author{
  line-height:30px;
  font-size:10px;
  color:#738a94;
  font-family:微软雅黑;
  margin-left: 2px;
}