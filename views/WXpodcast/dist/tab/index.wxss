.i-tabs-tab {
  flex: 1;
  display: flex;
  /*  width: 100%; */
  margin-right: 30rpx;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  text-align: center;
  position: relative;
}
.i-tabs-tab-bar {
  display: block;
  width: 100%;
  height: 2px;
  background: 0 0;
  position: absolute;
  bottom: 0;
  left: 0;
  border: 1rpx solid #2d8cf0;
  background: #2d8cf0;
  border: 2rpx;
}
.i-tabs-tab-title {
  font-size: 14px;
  text-align: center;
  box-sizing: border-box;
  color: #80848f;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.i-tabs-tab-title-current {
  color: #2d8cf0;
}
.i-tabs-tab-scroll {
  display: inline-block;
  /*  width: 200rpx; */
}
